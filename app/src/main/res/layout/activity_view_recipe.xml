<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.utilisateur.cookhelper.ViewRecipe">

    <ScrollView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true">

                <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Recipe Info-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/jumelles"
                            android:id="@+id/viewRecipelogo"
                            android:layout_gravity="center_horizontal" />

                    </LinearLayout>

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                        android:gravity="center">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Recipe Name Here"
                            android:textStyle="bold|normal"
                            android:textSize="24sp"
                            android:textAllCaps="false"
                            android:textAlignment="center"
                            android:id="@+id/recipeName" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Recipe Category"
                                android:layout_weight="1" />

                            <TextView
                                android:text="SampleCategory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView"
                                android:layout_weight="1"
                                android:textStyle="bold|normal"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Recipe Type"
                                android:layout_weight="1" />

                            <TextView
                                android:text="SampleType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/recipeTypeData"
                                android:layout_weight="1"
                                android:textStyle="bold|normal"/>
                        </LinearLayout>
                    </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <RatingBar
                                android:layout_width="match_parent"
                                android:id="@+id/ratingScore"
                                android:numStars="5"
                                android:rating="0"
                                android:stepSize="1"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:clickable="false" />
                        </LinearLayout>

                    </LinearLayout>

                <!-- Ingredient List -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ingredients"
                        android:textStyle="bold|normal"
                        android:id="@+id/ingredientTextField" />

                    <!--android:paddingTop="10dp"-->

                <!-- Instructions List -->
                    <ListView
                    android:layout_width="match_parent"
                        android:entries="@array/sample_ingredients"
                        android:clickable="false"
                        android:id="@+id/ingredientListView"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Instructions"
                        android:textStyle="bold|normal"
                        android:id="@+id/instructionTextField" />

                    <ListView
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                        android:id="@+id/instructionListViewCheck" />

                </LinearLayout>

        </ScrollView>
</RelativeLayout>