<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.utilisateur.cookhelper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddRecipe"
            android:label="@string/title_activity_add_recipe"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".SearchRecipe"
            android:label="@string/title_activity_search_recipe"></activity>
        <activity android:name=".AddIngredient"
            android:label="@string/title_activity_add_ingredient"></activity>
    </application>

</manifest>